\RequirePackage{etoolbox}

% Центрирование заголовка содержания
\patchcmd{\tableofcontents}
  {\contentsname}
  {\hfill{\contentsname}\hfill\null}
  {}
  {}

% Отступы между элементами содержания
\RequirePackage[titles]{tocloft}
\setlength\cftparskip{0pt}
\setlength\cftbeforechapskip{0pt} 

% Отступы в содержании
\cftsetindents{section}{0em}{2em}
\cftsetindents{subsection}{0em}{3em}

% Точки после названия глав
\renewcommand{\cftchapfont}{\normalfont}
\renewcommand{\cftchappagefont}{\normalfont}
\renewcommand{\cftdotsep}{1}
\renewcommand{\cftchapleader}{\cftdotfill{\cftsecdotsep}}

% Создание содержания
\newcommand{\maketableofcontents}
{
  {\parindent0pt
	\renewcommand\contentsname{\large\centering{СОДЕРЖАНИЕ}}
	\tableofcontents
  }
}

% Команда создания главы без номера по центру
\newcommand{\cchapter}[1]{{\parindent0pt
          \chapter*{\hfill{\centering #1}\hfill}}}

% Команда создания главы без номера (введения и т.д.)
\newcommand{\chapterwithoutnumber}[1]{
	\cchapter{#1}
	\addcontentsline{toc}{chapter}{#1}
}