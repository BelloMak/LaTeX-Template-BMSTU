\RequirePackage{acro}

% Для настройки расстояния между сокращениями
\RequirePackage{enumitem}

% Команда \input{./path/to/abbreviations.tex} должна находится до команды 
% \begin{document}

% Команда для добавления сокращения. Пример использования:
% \abbr{ТС}{Транспортное средство}
\newcommand{\abbr}[2]{
	\DeclareAcronym{#1}{
    	short={#1},
    	long={--- #2},
		short-format=\normalfont % Убирает жирный шрифт
    }
}

% Команда для вставки списка сокращений. По умолчанию выводится
% список сокращений, начинающийся со слов: "В настоящем отчете применяются
% следующие обозначения и сокращения." Другую вступительную фразу можно передать
% в качестве необязательного параметра.
\newcommand{\printabbr}[1][В настоящем отчете применяются следующие обозначения и сокращения.]{
	{\setlist{itemsep=0pt,parsep=6pt}
	\printacronyms[
		template=description,
        display=all,
        sort=true,
        name={\hfill{\centering СПИСОК ОБОЗНАЧЕНИЙ И СОКРАЩЕНИЙ}\hfill},
	    preamble={#1 \vspace{5pt}},
    ]}
	\addcontentsline{toc}{chapter}{СПИСОК ОБОЗНАЧЕНИЙ И СОКРАЩЕНИЙ}
}